<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <service>
        <jsr107:defaults enable-management="true" enable-statistics="true" jsr-107-compliant-atomics="true"/>

    </service>

    <persistence directory="persistenceCache"/>

    <cache-template name="default">
        <expiry>
            <ttl unit="hours">24</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">10</offheap>
            <disk unit="MB" persistent="true">20</disk>
        </resources>
    </cache-template>

    <cache-template name="keywordCounter">
        <expiry>
            <ttl unit="hours">24</ttl>
        </expiry>
        <listeners>
            <listener>
                <class>com.graceful.place.search.infrastructure.cache.KeywordCacheEventListener</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>UPDATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>REMOVED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
            </listener>
        </listeners>

        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">10</offheap>
            <disk unit="MB" persistent="true">20</disk>
        </resources>
    </cache-template>

    <cache alias="PLACE_SEARCH_KEYWORD_COUNTER"
           uses-template="keywordCounter">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Long</value-type>

        <jsr107:mbeans enable-statistics="true"/>

    </cache>


</config>